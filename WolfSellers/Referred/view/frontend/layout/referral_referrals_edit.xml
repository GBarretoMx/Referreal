    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Edit Referral</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="WolfSellers\Referred\Block\Referrals\EditReferral" name="referrals_forms_edit" template="WolfSellers_Referred::referrals_edit.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
